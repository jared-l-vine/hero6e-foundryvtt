{{log 'item-defense-sheet' this}}
<form class="{{cssClass}}" autocomplete="off" data-id="{{item._id}}" data-realId="{{item.system.realId}}">
    <header class="sheet-header flexrow">
        <img class="profile" name="img" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="Defense Name" />
            </h1>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        <textarea placeholder="Defense Description" class="power-card-power-description textarea input"
            name="system.rules">{{system.rules}}</textarea>

        <div class="form-group">
            <label>Defense Type</label>
            <select name="system.defenseType" data-dtype="text">
                {{#if item.actor.system.is5e}}
                {{selectOptions config.defenseTypes5e selected=system.defenseType}}
                {{else}}
                {{selectOptions config.defenseTypes selected=system.defenseType}}
                {{/if}}
            </select>
        </div>

        <div class="form-group">
            <label>Value</label>
            <input type="text" name="system.value" value="{{system.value}}" data-dtype="Number" />
        </div>

        <div class="form-group">
            <label>Active By Default</label>
            <input type="checkbox" name="system.active" {{checked system.active}} data-dtype="Boolean" />
        </div>

        <div class="form-group">
            <label>Resistant</label>
            <input type="checkbox" name="system.resistant" {{checked system.resistant}} data-dtype="Boolean" />
        </div>

        <div class="form-group">
            <label>Levels of Hardened</label>
            <input type="text" name="system.hardened" value="{{system.hardened}}" data-dtype="Number" />
        </div>

        <div class="form-group">
            <label>Levels of Impenetrable</label>
            <input type="text" name="system.impenetrable" value="{{system.impenetrable}}" data-dtype="Number" />
        </div>

        {{editor system.description target="system.description" button=true owner=owner editable=editable}}
    </section>
</form>